<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/profile_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:layout_marginBottom="16dp"
        android:clipToPadding="false"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="fitCenter"
            android:src="@drawable/user"
            android:layout_marginEnd="16dp"
            android:padding="2dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:text="Abdul Ahad"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222222" />

            <Button
                android:id="@+id/btn_change_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textSize="14sp"
                android:textColor="#2196F3"
                android:layout_marginTop="0.5dp"
                android:padding="0dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                app:cornerRadius="12dp"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/logoutbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginBottom="20dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:textColor="@color/profile_action"
        android:layout_below="@id/profile_header"/>

    <TextView
        android:id="@+id/my_posts_label"
        android:text="My Posts"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_below="@id/logoutbutton"/>

    <TextView
        android:id="@+id/swipe_hint"
        android:text="Swipe Right to delete the post"
        android:textSize="12sp"
        android:textStyle="italic"
        android:textColor="#FF0000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_below="@id/my_posts_label"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:layout_below="@id/swipe_hint"
        android:layout_above="@id/bottom_navigation"
        android:paddingBottom="8dp"/>

    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_nav_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
